
            <article class="question question-type-normal">
              <h2>
                <a href="single_question.html"> <%= link_to(question.title, question_path(question))%></a>
              </h2>
              <!-- <a class="question-report" href="#">Report</a>
              <div class="question-type-main"><i class="icon-question-sign"></i>Question</div> -->
              <!-- <div class="question-author">
                <a href="#" original-title="ahmed" class="question-author-img tooltip-n"><span></span><img alt="" src="http://placehold.it/60x60/FFF/444"></a>
              </div> -->
              <div class="question-inner">
                <div class="clearfix"></div>
                <%= raw(question.body) %>
                <p class="question-desc"></p>
                <!-- <div class="question-details">
                  <span class="question-answered question-answered-done"><i class="icon-ok"></i>solved</span>
                  <span class="question-favorite"><i class="icon-star"></i>5</span>
                </div>
                <span class="question-category"><a href="#"><i class="icon-folder-close"></i>wordpress</a></span> -->
                <span class="question-date"><i class="icon-time"></i>Posted: <%= question.created_at.strftime("%A, %d %b %Y %l:%M %p")  %></span>
                  <span class="question-comment"><a href="#"><i class="icon-comment"></i>
                    <%= link_to(pluralize(question.responses.length, "response"), question_path(question, anchor: "commentlist"))%>
                  </a></span>
                <!-- <span class="question-view"><i class="icon-user"></i>70 views</span> -->
                <span class="question-favorite"><i class="icon-thumbs-up"></i><%= pluralize(question.score, "Vote") %> </span>
                <div class="question-tags"><i class="icon-tags">Tags:</i>
                  <% question.tags.each do |tag| %>
                    <%= link_to tag.name, tag_path(tag) %>
                  <% end %>
                </div>
                <div class="clearfix"></div>
              </div>
            </article>
